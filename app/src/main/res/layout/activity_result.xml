<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".ResultActivity">


    <!-- aplicando o gradiente criado -->
    <LinearLayout
        android:id="@+id/vg_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@drawable/gradient_bg"
        android:orientation="vertical">
        <!-- app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"> -->


        <!-- icone balança -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/ic_weight"
            app:tint="@color/white"

            />

        <!--titulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="12dp"
            android:text="Calculadora IMC"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />


        <!-- Descricao -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="12dp"
            android:text="Confira abaixo o seu resultado e classificação"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="36dp"
            android:gravity="center"
            android:maxLength="5"
            android:textColor="@color/white"
            android:textSize="48dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="163dp"
            tools:text="23.66" />

    </LinearLayout>



    <TextView
        android:id="@+id/tv_classificacao_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="A classificação do seu IMC é:"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="163dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <!-- Classificacao -->
    <TextView
        android:id="@+id/tv_classificacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textStyle="bold"
        tools:text="NORMAL"
        android:layout_marginLeft="150dp"
        android:padding="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="163dp" />

        <!-- Icone Informacao -->
    <ImageView
        android:id="@+id/ic_info"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="0dp"
        android:src="@drawable/ic_info"
        app:tint="@color/black"
        android:padding="6dp"

        />

    </LinearLayout>




<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="150dp"
    android:layout_gravity="center" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_refresh"
        app:tint="@color/primary650" />



    <Button
        android:id="@+id/bt_Recalcular"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:baselineAligned="false"
        android:text="Recalcular"
        android:textColor="@color/primary650"
        android:paddingLeft="6dp"
        />



</LinearLayout>



</LinearLayout>


